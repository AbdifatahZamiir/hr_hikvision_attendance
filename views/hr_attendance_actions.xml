<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_search_attendance" model="ir.actions.server">
        <field name="name">Download Attendance Report</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="binding_model_id" ref="hr_attendance.model_hr_attendance"/>
        <!-- Importante para que aparezca en el engranaje -->
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
        action = {
            'name':'Download Attendance Report',
            'type': 'ir.actions.act_window',
            'res_model': 'hr.attendance.wizard',
            'view_mode': 'form',
            'target': 'new',
            'context':{'active_ids':records.ids},
        } </field>
    </record>

</odoo>