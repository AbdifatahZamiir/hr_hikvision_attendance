<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="hr_employee_inherit_view_form" model="ir.ui.view">
        <field name="name">hr.employee.inherit.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="inside">
                <group string="Hikvision Device">
                    <field name="biometric_id"/>
                    <field name="hikvision_id" />
                </group>
            </xpath>
            <xpath expr="//header" position="inside">
            <field name="hikvision_register" invisible="1" />
                <button name="action_create_user" 
                        string="Upload User to Device" 
                        type="object" 
                        class="oe_highlight" 
                        invisible="not hikvision_register" />
            </xpath>
        </field>
    </record>

    <record id="hr_employee_inherit_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.inherit.view.tree</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="biometric_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="hr_employee_inherit_view_kanban" model="ir.ui.view">
        <field name="name">hr.employee.inherit.view.kanban</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@t-if='record.work_phone.raw_value']" position="after">
                <div invisible="not biometric_id" class="o_text_overflow">
                    <i class="fa fa-user" ></i>
                    ID: 
                        <field name="biometric_id"/>
                </div>
                <div invisible="not hikvision_id" class="hr_tags">
                    <i class="fa fa-floppy-o fa-5"></i>
                    DEVICE:   
                        <field name="hikvision_id"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
